@{ 
    NavOption navId = ViewBag.NavId ?? NavOption.Home;
}
<!DOCTYPE html>
<html lang="en">
<head>

    <!-- SITE TITTLE -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Magic Square Systems Training</title>

    <!-- PLUGINS CSS STYLE -->
    <link href="~/Assets/template/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Assets/template/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/template/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!-- GOOGLE FONT -->
    <link href="https://fonts.googleapis.com/css?family=Muli:200,300,400,600,700,800,900" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Herr+Von+Muellerhoff" rel="stylesheet" />

    <!-- CUSTOM CSS -->
    <link href="~/Assets/template/css/app.css" rel="stylesheet" />
    <link href="~/Assets/template/css/default.css" rel="stylesheet" />

    <!-- FAVICON -->
    <link href="~/Assets/template/img/favicon.png" rel="shortcut icon" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    @RenderSection("Header", required: false)
</head>

<body id="body" class="body-wrapper boxed-menu">
    <div class="main-wrapper">
        <!-- HEADER -->
        <header id="pageTop" class="header">

            <!-- TOP INFO BAR -->

            <div class="nav-wrapper navbarWhite">

                <!-- NAVBAR -->
                <nav id="menuBar" class="navbar navbar-default lightHeader " role="navigation">
                    <div class="container">

                        <!-- Brand and toggle get grouped for better mobile display -->
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="@Url.Action("Index", "Home")" ">
                                <h1 class="text-primary mb0">
                                    <i class="fa fa-th"></i>
                                    MSS Training
                                </h1>
                                
                            </a>
                        </div>

                        <!-- Collect the nav links, forms, and other content for toggling -->
                        <div class="collapse navbar-collapse navbar-ex1-collapse">
                            <ul class="nav navbar-nav navbar-right mr0">
                                <li class="@(navId == NavOption.Home ? "active" : "")">
                                    <a href="@Url.Action("Index", "Home")">home </i></a>
                                </li>

                                <li class="@(navId == NavOption.Examples ? "active" : "") dropdown singleDrop">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">examples <i class="fa fa-angle-down" aria-hidden="true"></i></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("Users", "Example")">User list</a></li>
                                    </ul>
                                </li>

                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </header>
        <!-- Dashboard header -->
        <section class="navbar-dashboard-area">
            <nav class="navbar navbar-default lightHeader navbar-dashboard" role="navigation">
                <div class="container">

                    <div class="row adjustRow">
                        <div class="pull-right col-xs-12 col-sm-2">
                            <form class="navbar-form" role="search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search" name="q">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button"><i class="icon-listy icon-search-2"></i></button>
                                    </span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </nav>
        </section>


        <!-- Dashboard breadcrumb section -->
        <div class="section dashboard-breadcrumb-section bg-dark">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <h2>@ViewBag.Title</h2>
                        <ol class="breadcrumb">
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            @RenderSection("Breadcrumb", required: false)
                        </ol>
                    </div>
                </div>
            </div>
        </div>

        @RenderBody()

        <!-- FOOTER -->
        <footer class="copyRightDashboard">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <p>Copyright © Magic Square Systems Ltd, @DateTime.Today.Year. All Rights Reserved</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- JAVASCRIPTS -->
    <script src="@Url.Content("~/Assets/template/plugins/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/Assets/template/plugins/jquery/jquery-migrate.js")"></script>
    <script src="@Url.Content("~/Assets/template/plugins/jquery-ui/jquery-ui.min.js")"></script>    
    <script src="@Url.Content("~/Assets/template/plugins/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Assets/template/js/app.js")"></script>
    @RenderSection("Script", required: false)
</body>

</html>